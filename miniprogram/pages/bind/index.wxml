<view class="container">
  <view class="box">
  <view class="text">
    请填写孩子微信绑定的手机号码
  </view>
    <van-cell-group inset>
      <van-field
        model:value="{{ phone }}"
        label="手机号码"
        maxlength="11"
        type="number"
        placeholder="请输入孩子的手机号码"
        input-align="left"
      />
    </van-cell-group>
    <van-dialog id="van-dialog" />
    <view class="submit">
      <van-button type="primary" round bind:click="submit" size="large" style="margin-bottom:20px">绑定</van-button>
      <view style="margin-top:20px">
      <van-button type="primary" round  size="large" bind:click="goSignAndBind" >帮孩子注册并绑定</van-button>
    </view>
    </view>

  </view>
</view>
 
<van-divider />

<van-divider />
<van-card
  num="1"
  price="{{price}}"
  desc="描述信息"
  title="商品标题"
  thumb="{{ imageURL }}"
/>
<van-divider />

<van-field
  value="{{ value }}"
  is-link
  readonly
  label="姓名"
  placeholder="请选择孩子姓名"
  bind:tap="onClick0"
/>
<van-divider />
<van-field
  value="{{ fieldValue }}"
  is-link
  readonly
  label="规格"
  placeholder="请选择规格"
  bind:tap="onClick"
/>
<van-divider />
<van-cell title="课程数量（节）">
  <van-stepper model:value="{{ count }}"  bind:change="getCount"/>
</van-cell>


<van-popup show="{{ show }}" round position="bottom">
  <van-cascader
    wx:if="{{ show }}"
    value="{{ cascaderValue }}"
    title="请选择规格"
    options="{{ options }}"
    bind:close="onClose"
    bind:finish="onFinish"
  />

</van-popup>
<view class="submit">

  <van-submit-bar
  price="{{total}}"
  button-text="提交订单"
  bind:submit="onSubmit"
/>
</view>
<van-popup
  show="{{ show2 }}"
  closeable
  position="bottom"
  custom-style="height: 40%"
  bind:close="onClose2"
>
<van-cell-group>
  <van-divider
  contentPosition="center"
  customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;"
>
  请确认信息
</van-divider>
  <van-cell title="姓名" value="{{ value }}" />
  <van-cell title="规格" value="{{fieldValue}}" />
  <van-cell title="数量" value="{{count}}" />
</van-cell-group>
<view class="btn">
  <van-button type="primary" block round>去支付</van-button>
</view>
</van-popup>

<van-popup round position="bottom"  custom-style="height: 50%" show="{{ show0 }}" bind:close="onClose0" closeable>
<view style="margin-top: 40px;">
  <van-cell-group>
  <view class="added-items" wx:for="{{stuList}}" wx:key="index">
    <van-field
    readonly
    center
    clearable
    label="{{item}}"
    border="true"
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary" 
    data-name="{{item}}"
    bind:click="chose">
      选择
    </van-button>
  </van-field>
  </view>
</van-cell-group>
</view>

</van-popup>

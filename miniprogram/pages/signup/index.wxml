
<view class="main">

  <view class="container">
    <view class="hello">
      <text>Hello!</text>
    </view>
    
    <view class="welcome">欢迎使用德一学习</view>

    <view class="welcome">注册页面</view>
    <van-cell-group>
      <van-field
        label="姓名"
        maxlength="6"
        model:value="{{ username }}"
        placeholder="请输入真实姓名"
        bind:change="onChange"
      />
      <van-field
        label="密码"
        password="{{isPassword}}"
        icon="{{eye}}"
        bind:click-icon="onClickEye"
        model:value="{{ password }}"
        placeholder="请输入密码"
        bind:change="onChange"
        bind:click-input="confirmPsw"
      />
      <van-field
        label="确认密码"
        password="{{isPassword}}"
        icon="{{eye}}"
        bind:click-icon="onClickEye"
        model:value="{{password2}}"
        placeholder="再次输入密码"
        wx:if="{{show}}"
      />
      密码请包括字母，数字，8位以上
    </van-cell-group>
    <view class="btn">
      <van-button type="primary" open-type="getPhoneNumber"   bindgetphonenumber="getPhoneNumber" round block>手机号一键注册</van-button>
      <!-- <button class="PhoneLogin" open-type="getPhoneNumber" type="primary"  bindgetphonenumber="getPhoneNumber" round>微信账号一键登录</button> -->
    </view>
  </view>
</view>
<van-dialog id="van-dialog" />
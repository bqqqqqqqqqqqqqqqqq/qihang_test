/* pages/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  max-width: 500rpx;
  border: 1rpx solid #ddd;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #ffff;
}

.input-item {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  border: none;
  border-bottom: 1rpx solid #ddd;
  outline: none;
  background-color: transparent;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #007AFF;
  border-radius: 10rpx;
  outline: none;
  border: none;
}

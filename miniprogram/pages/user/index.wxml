<view class="top-box">
  <!-- <view class="avatar">
    <image src="{{src}}" style="width:140rpx ;height: 140rpx;border-radius: 100%;" alt=""/>
  </view> -->
  <view class="right">
    <view class="info">
      <text class="name">{{UserInfo.name}}</text>
      <text class="type" wx:if="{{UserInfo.isAdmin==1&&token!=''}}">学生</text>
      <text class="type" wx:if="{{UserInfo.isAdmin==2}}">家长</text>
      <text class="type" wx:if="{{UserInfo.isAdmin==3}}">老师</text>
      <text class="type" wx:if="{{UserInfo.isAdmin==4}}">管理员</text>
    </view>

    
    <van-button wx:if="{{!token}}" class="gotologin"  round plain size="mini" bind:click="goLogin">去登录</van-button>
    <van-button wx:if="{{token}}" class="gotologin"  round plain size="mini" bind:click="loginOut">退出登录</van-button>
    

  </view>
  
</view>
<van-cell-group wx:if="{{UserInfo.isAdmin<4}}">
<!-- 2 为家长 3为教师 -->
  <van-cell wx:if="{{UserInfo.isAdmin==1}}" title="我的课程" icon="orders-o" is-link link-type="navigateTo" url="../kc/index?id={{id}}" size="large"/>
  <van-cell wx:if="{{UserInfo.isAdmin==2}}" title="我的课程" icon="orders-o" is-link link-type="navigateTo" url="../kc/index?id={{id}}" size="large"/>
  <van-cell wx:if="{{UserInfo.isAdmin==2}}" title="购买课程" icon="cart-o" is-link link-type="navigateTo" url="../buykc/index" size="large"/>
  <van-cell wx:if="{{UserInfo.isAdmin==1}}" title="我是家长，绑定我的孩子" icon="aim" is-link link-type="navigateTo" url="../bind/index" size="large"/>
  <van-cell wx:if="{{UserInfo.isAdmin==2}}" title="绑定孩子" icon="aim" is-link link-type="navigateTo" url="../bind/index" size="large"/>
</van-cell-group>
<van-cell-group wx:if="{{UserInfo.isAdmin==5||UserInfo.isAdmin==3}}">

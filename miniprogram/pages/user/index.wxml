  <van-cell title="我的回答" icon="sign" is-link link-type="navigateTo" url="../questionToMe/index"  size="large"/> 
  <van-cell title="待我回答" icon="chat-o" is-link link-type="navigateTo" url="../questionToMe/index" size="large"/>
</van-cell-group>


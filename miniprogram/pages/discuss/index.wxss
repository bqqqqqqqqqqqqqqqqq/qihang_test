.so{
  background-color: #fff;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.van-search__action view{
  margin: 0px 10px;
}
.quesbox{
  height: 350rpx;
  margin-top: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column
}
.time{
  color: #323233;
  align-self : flex-end;
  margin-right: 5%;
}
.quesion{
    height: 90%;
    width: 90%;
    border-radius: 8px 8px 8px 8px;
    box-shadow: 0px 0px 4px #000000;
    background-color: #f0f2f7;
}
.q_pic{
  height: 75%;
  margin-bottom: 5px;
  border-radius: 8px 8px 0 0;
  /* box-shadow: 0px 0px 4px #000000; */
  background-position: 50% 50%;
  background-size: cover;
  background-repeat: no-repeat;
}
.q_tag{
  margin-right : 10px;
  margin-left : 10px;
}
.fix{
  position: fixed;
  background-color:#ffff;
  height: 30px;
  width: 100%;
  z-index: 100;
  text-align:center;
  border-radius: 75px;
  color: #323233;
}
.filter{
  margin-top: 30px;
}
.search-bottom{
  margin-bottom: 100px;
}
<view class="card" wx:for="{{list}}" wx:key="index">
      <van-card
        desc="{{item.teacherName}}老师"
        title="{{item.className}}课"
 
      >
      <view slot="footer">
        <van-button class="btn" size="small" hairline disabled>{{item.complete}}/{{item.completeTotal}}</van-button>
        <van-button class="btn" type="info" size="small" bind:click="checkIn" data-id="{{item.id}}" data-idx="{{index}}" disabled="{{item.done}}">签到</van-button>
        <van-button class="btn" type="primary" size="small" data-classcount="{{item.completeTotal}}" data-id="{{item.id}}" data-tid="{{item.teacher_id}}" bind:click="edit">修改</van-button>
      </view>
      </van-card>     
    </view>

<van-dialog
  use-slot
  title="增加/减少课程数"
  show="{{ show }}"
  show-cancel-button
  bind:confirm="confirm"
  bind:close="onClose"
>
<van-radio-group value="{{ radio }}" bind:change="radioChange">
  <van-cell-group>
    <van-cell title="增加" clickable data-name="1" bind:click="onClick">
      <van-radio slot="right-icon" name="1" />
    </van-cell>
    <van-cell title="减少" clickable data-name="2" bind:click="onClick">
      <van-radio slot="right-icon" name="2" />
    </van-cell>
  </van-cell-group>
</van-radio-group>

  <view class="stepper">
    <view class="stepperMain">
      <van-stepper value="{{ count }}"  bind:change="numChange"/>
    </view>
  </view>
</van-dialog>
<view class="bottom"></view>
<van-submit-bar
  button-text="添加购买"
  bind:submit="goaddClass"
/>

<view class="card" wx:for="{{list}}" wx:key="index">
      <van-card
        desc="{{item.teacherName}}老师"
        title="{{item.className}}课"
 
      >
      <view slot="footer">
        <van-button class="btn" size="small" hairline disabled>{{item.complete}}/{{item.completeTotal}}</van-button>
        <van-button class="btn" type="info" size="small" bind:click="checkIn" data-id="{{item.id}}" data-idx="{{index}}" disabled="{{item.done}}">签到</van-button>
        <van-button class="btn" type="primary" size="small" data-classcount="{{item.completeTotal}}" data-id="{{item.id}}" bind:click="edit">修改</van-button>
      </view>
      </van-card>     
    </view>

<van-dialog
  use-slot
  title="添加课程数"
  show="{{ show }}"
  show-cancel-button
  bind:confirm="confirm"
  bind:close="onClose"
>
  <view class="stepper">
    <view class="stepperMain">
      <van-stepper integer  value="{{ count }}"  bind:change="numChange"/>
    </view>
  </view>
</van-dialog>

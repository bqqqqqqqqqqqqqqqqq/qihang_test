<!--pages/clockIn/index.wxml-->
<van-tabs swipeable>
  <van-tab title="一对一">
  <van-cell-group>
  <van-cell 
    wx:for="{{oneList}}"
    wx:key="index"
  
    label="已上{{item.rate}}节"
    size="large">
    <view slot="title">
    <view class="van-cell-text">{{item.sname}}（{{item.sub}}）</view>
    <van-button type="primary" disabled size="mini">签到</van-button>
    <van-button type="primary" size="mini" bindtap="goHistory">查看记录</van-button>
  </view>
</van-cell>
  </van-cell-group>
  </van-tab>
  <!-- ------------------------- -->
  <van-tab title="小班">
  <van-cell-group>
        <van-cell
        wx:for="{{smallClass}}"
        wx:key="bid"
      is-link
      title="{{item.bname}}"
      size="large"
      bindtap="goHistory2"
      data-bid="{{item.bid}}"
    />
  </van-cell-group>
  </van-tab>
</van-tabs>
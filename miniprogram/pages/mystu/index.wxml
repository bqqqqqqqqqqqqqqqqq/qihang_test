<!--pages/mystu/index.wxml-->
<van-nav-bar
  title="班级管理"
  right-text="管理" 
  bind:click-left="onClickLeft"
  bind:click-right="manage"
/>

<van-cell-group wx:if="{{!type}}">
  <van-cell title="查看学生" value="" size="large" label=" " 
  bindtap="gotoallstu"
  is-link />
</van-cell-group>

<van-cell-group title="班级">
  <van-swipe-cell class="vsc" wx:for="{{bList}}" wx:key="id" right-width="{{ 65 }}" async-close bind:close="onClose">
    <van-cell-group>
      <van-cell size="large" title="{{item.className}}||{{item.teacherName}}" is-link  bindtap="gotoSetClass" data-bname="{{item.className}}" data-bid="{{item.id}}"/>
    </van-cell-group>
    <view slot="right" >删除</view>
  </van-swipe-cell>
</van-cell-group>
<van-dialog id="van-dialog" />
<van-button icon="plus" type="primary" block bind:click="click" wx:if="{{!type}}">添加班级</van-button>

<view class="vnb" wx:if="{{!type}}" >
  <van-notice-bar
  color="#1989fa"
  background="#ecf9ff"
  left-icon="info-o"
  text="{{notice}}"
/>
</view>
